<div class="relative grid min-h-screen place-items-center overflow-hidden px-4 py-10">
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_10%_8%,rgba(255,90,47,0.16),transparent_35%),radial-gradient(circle_at_90%_10%,rgba(216,27,96,0.14),transparent_30%)]"></div>

  <div class="relative z-10 w-[min(92vw,520px)]">
    <div class="mb-6 flex items-center justify-center gap-3 text-[var(--ink-900)]">
      <div class="grid h-16 w-16 place-items-center rounded-full border border-[var(--brand-600)] bg-[var(--panel)] text-sm font-semibold text-[var(--brand-700)]">QR</div>
      <h1 class="font-display text-6xl font-semibold leading-none">PedidoFÃ¡cil</h1>
    </div>

    <div class="elegant-card bg-[var(--panel)] p-6">
      <h2 class="mb-5 text-center font-display text-5xl font-semibold leading-none text-[var(--ink-900)]"><%= t('devise.sessions.new.welcome') %></h2>

      <% if alert.present? %>
        <p class="mb-2 text-center text-sm text-red-700"><%= alert %></p>
      <% end %>

      <% if resource.errors.any? %>
        <p class="mb-2 text-center text-sm text-red-700"><%= resource.errors.full_messages.to_sentence %></p>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col gap-3" }) do |f| %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", required: true, class: "rounded-md border border-[var(--line-soft)] bg-[var(--panel-strong)] px-3 py-2 text-base text-[var(--ink-700)] focus:border-[var(--brand-600)] focus:outline-none focus:ring-2 focus:ring-[var(--focus-ring)]" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", required: true, class: "rounded-md border border-[var(--line-soft)] bg-[var(--panel-strong)] px-3 py-2 text-base text-[var(--ink-700)] focus:border-[var(--brand-600)] focus:outline-none focus:ring-2 focus:ring-[var(--focus-ring)]" %>

        <div class="flex justify-end">
          <%- if devise_mapping.recoverable? %>
            <%= link_to t('devise.sessions.new.forgot_password'), new_password_path(resource_name), class: "text-xs font-semibold tracking-wide text-[var(--ink-500)] no-underline" %>
          <% end %>
        </div>

        <%= f.submit t('devise.sessions.new.submit'), class: "elegant-button-primary mt-2 !rounded-lg !px-4 !py-2.5 !text-sm" %>
      <% end %>
    </div>
  </div>
</div>
