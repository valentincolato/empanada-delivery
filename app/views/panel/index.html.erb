<div class="min-h-screen bg-slate-100">
  <header class="border-b border-slate-200 bg-white">
    <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-4 py-4 sm:px-6">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.16em] text-slate-500">Admin Panel</p>
        <h1 class="text-2xl font-bold text-slate-900">Hola <%= current_user.name.presence || current_user.email %></h1>
        <p class="mt-1 text-sm text-slate-600">Elegí a dónde querés entrar.</p>
      </div>
      <%= button_to "Cerrar sesión", destroy_user_session_path, method: :delete, class: "rounded-lg border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 transition hover:bg-slate-50" %>
    </div>
  </header>

  <main class="mx-auto w-full max-w-6xl px-4 py-8 sm:px-6">
    <% if current_user.super_admin? %>
      <section class="mb-8 rounded-2xl border border-indigo-200 bg-gradient-to-r from-indigo-600 to-blue-600 p-6 text-white shadow-lg">
        <p class="text-xs font-semibold uppercase tracking-[0.16em] text-indigo-100">Super Admin</p>
        <h2 class="mt-2 text-2xl font-bold">Gestión de restaurantes</h2>
        <p class="mt-2 max-w-2xl text-sm text-indigo-100">Creá restaurantes, editá datos y administrá el alta de usuarios administradores.</p>
        <div class="mt-5 flex flex-wrap gap-3">
          <a href="/super_admin/restaurants" class="rounded-lg bg-white px-4 py-2 text-sm font-bold text-indigo-700 shadow transition hover:bg-indigo-50">Ver restaurantes</a>
        </div>
      </section>
    <% end %>

    <% if current_user.restaurant_admin? %>
      <section class="mb-8">
        <div class="mb-4">
          <p class="text-xs font-semibold uppercase tracking-[0.16em] text-slate-500">Restaurante</p>
          <h2 class="text-2xl font-bold text-slate-900"><%= current_user.restaurant&.name || "Panel de gestión" %></h2>
        </div>

        <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-4">
          <% [
            ["Pedidos", "/admin/orders", "Tablero de pedidos en tiempo real"],
            ["Productos", "/admin/products", "Alta, edición y disponibilidad"],
            ["Categorías", "/admin/categories", "Orden y estructura del menú"],
            ["QR", "/admin/qr", "Acceso rápido al menú público"]
          ].each do |title, href, description| %>
            <a href="<%= href %>" class="group rounded-xl border border-slate-200 bg-white p-5 shadow-sm transition hover:-translate-y-0.5 hover:border-slate-300 hover:shadow">
              <h3 class="text-lg font-semibold text-slate-900 group-hover:text-blue-700"><%= title %></h3>
              <p class="mt-1 text-sm text-slate-600"><%= description %></p>
              <p class="mt-4 text-sm font-semibold text-blue-600">Entrar →</p>
            </a>
          <% end %>
        </div>

        <% if current_user.restaurant&.slug.present? %>
          <div class="mt-5 rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
            <h3 class="text-base font-semibold text-slate-900">Acceso público</h3>
            <p class="mt-1 text-sm text-slate-600">Vista del menú que ven tus clientes.</p>
            <a href="/r/<%= current_user.restaurant.slug %>" target="_blank" rel="noreferrer" class="mt-4 inline-flex rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm font-semibold text-slate-700 transition hover:bg-slate-50">Abrir menú público</a>
          </div>
        <% end %>
      </section>
    <% end %>

    <% if !current_user.super_admin? && !current_user.restaurant_admin? %>
      <section class="rounded-xl border border-amber-200 bg-amber-50 p-5">
        <h2 class="text-lg font-semibold text-amber-900">No tenés accesos de administración</h2>
        <p class="mt-2 text-sm text-amber-800">Tu usuario no tiene rol de restaurante ni super admin.</p>
      </section>
    <% end %>
  </main>
</div>
