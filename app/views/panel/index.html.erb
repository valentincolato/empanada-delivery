<div class="min-h-screen">
  <header class="border-b border-[var(--line-soft)] bg-[var(--panel)]">
    <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-4 py-4 sm:px-6">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.16em] text-[var(--gold-700)]">Admin Panel</p>
        <h1 class="font-display text-4xl font-semibold text-[var(--ink-900)]"><%= t('panel.greeting', name: current_user.name.presence || current_user.email) %></h1>
        <p class="mt-1 text-sm text-[var(--ink-700)]"><%= t('panel.tagline') %></p>
      </div>
      <%= button_to t('panel.sign_out'), destroy_user_session_path, method: :delete, class: "elegant-button-secondary !rounded-lg !px-4 !py-2 !text-sm" %>
    </div>
  </header>

  <main class="mx-auto w-full max-w-6xl px-4 py-8 sm:px-6">
    <% if current_user.super_admin? %>
      <section class="mb-8 rounded-2xl border border-[var(--line-soft)] bg-[linear-gradient(135deg,#f8f0e2,#f2e7d3)] p-6 text-[var(--ink-900)] shadow-[0_12px_28px_rgba(22,18,10,0.08)]">
        <p class="text-xs font-semibold uppercase tracking-[0.16em] text-[var(--gold-700)]">Super Admin</p>
        <h2 class="mt-2 font-display text-4xl font-semibold"><%= t('panel.super_admin.title') %></h2>
        <p class="mt-2 max-w-2xl text-sm text-[var(--ink-700)]"><%= t('panel.super_admin.description') %></p>
        <div class="mt-5 flex flex-wrap gap-3">
          <a href="/super_admin/restaurants" class="elegant-button-primary !rounded-lg !px-4 !py-2 !text-sm"><%= t('panel.super_admin.view_restaurants') %></a>
        </div>
      </section>
    <% end %>

    <% if current_user.restaurant_admin? %>
      <section class="mb-8">
        <div class="mb-4">
          <p class="text-xs font-semibold uppercase tracking-[0.16em] text-[var(--gold-700)]"><%= t('panel.restaurant_admin.label') %></p>
          <h2 class="font-display text-4xl font-semibold text-[var(--ink-900)]"><%= current_user.restaurant&.name || "Panel de gestiÃ³n" %></h2>
        </div>

        <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-4">
          <% [
            [t('panel.restaurant_admin.sections.orders'), "/admin/orders", t('panel.restaurant_admin.sections.orders_desc')],
            [t('panel.restaurant_admin.sections.products'), "/admin/products", t('panel.restaurant_admin.sections.products_desc')],
            [t('panel.restaurant_admin.sections.categories'), "/admin/categories", t('panel.restaurant_admin.sections.categories_desc')],
            [t('panel.restaurant_admin.sections.qr'), "/admin/qr", t('panel.restaurant_admin.sections.qr_desc')]
          ].each do |title, href, description| %>
            <a href="<%= href %>" class="group elegant-card bg-white/80 p-5 transition hover:-translate-y-0.5">
              <h3 class="font-display text-3xl font-semibold text-[var(--ink-900)]"><%= title %></h3>
              <p class="mt-1 text-sm text-[var(--ink-700)]"><%= description %></p>
              <p class="mt-4 text-xs font-semibold uppercase tracking-[0.14em] text-[var(--gold-700)]"><%= t('panel.restaurant_admin.enter') %></p>
            </a>
          <% end %>
        </div>

        <% if current_user.restaurant&.slug.present? %>
          <div class="mt-5 elegant-card bg-white/80 p-5">
            <h3 class="text-base font-semibold text-[var(--ink-900)]"><%= t('panel.restaurant_admin.public_access') %></h3>
            <p class="mt-1 text-sm text-[var(--ink-700)]"><%= t('panel.restaurant_admin.public_access_desc') %></p>
            <a href="/r/<%= current_user.restaurant.slug %>" target="_blank" rel="noreferrer" class="elegant-button-secondary mt-4 !rounded-lg !px-3 !py-2 !text-sm"><%= t('panel.restaurant_admin.open_public_menu') %></a>
          </div>
        <% end %>
      </section>
    <% end %>

    <% if !current_user.super_admin? && !current_user.restaurant_admin? %>
      <section class="rounded-xl border border-amber-300 bg-amber-50 p-5">
        <h2 class="text-lg font-semibold text-amber-900"><%= t('panel.restaurant_admin.no_access_title') %></h2>
        <p class="mt-2 text-sm text-amber-800"><%= t('panel.restaurant_admin.no_access_description') %></p>
      </section>
    <% end %>
  </main>
</div>
